      margin-top: 1rem;
      margin-bottom: 1rem;
    }

    .mobile-layout {
      align-items: center;
      align-content: center;
      flex-direction: column;
      justify-content: center;
    }

    .prev {
      width: 20em;
      padding: 0;
    }

    .prev.draft-prev {
      display: none;
    }
  }
