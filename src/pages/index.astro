---
import Layout from "../layouts/Layout.astro"
import Navbar from "../components/Navbar.astro"
import Preview from "../components/Preview.astro"
import Icon from "astro-icon"
---

<Layout title="Draft.ia">
  <Navbar />
  <main class="grid place-content-center text-black dark:text-white mt-8">
    <div class="flex justify-center content-around mobile-layout">
      <div class="font-bold">
        <h2 class="title text-6xl">Draft any topic</h2>
        <h2
          class="title text-6xl duration-700 ease-in opacity-0 transition-all"
        >
          with powered IA
        </h2>
        <div class="mt-8 container-prev">
          <a
            class="mt-4 p-4 rounded text-white text-4xl bg-cyan-500 hover:bg-blue-700 transition-all hover:scale-110 link-app"
            href="/app"
          >
            Start Drafting</a
          >
          <p class="mt-10 w-[40ch] text-2xl description">
            Draft.ia is a web site to empower people to draft any topic to
            create blogs, investigations with text generated by ultimate
            generation of IA technology
          </p>
          <p class="phrase mt-4 text-4xl text-blue-400">
            Unlock the power of <b class="dark:text-white text-black">IA</b> in your
            texts
          </p>
        </div>
      </div>
      <Preview className="prev" />
    </div>
    <section class="m-0">
      <h4 class="text-3xl font-semibold mt-2">Features</h4>
      <ul class="flex align-middle features-list">
        <li
          class="mt-4 p-2 dark:feature-item dark:feature-border dark:hover:bg-slate-600 hover:bg-blue-100"
        >
          <div class="text-cyan-400 w-20">
            <Icon name="carbon:tool-kit" />
          </div>
          Easy to use
        </li>
        <li
          class="ml-2 mt-4 p-2 dark:feature-item dark:feature-border dark:hover:bg-slate-600 hover:bg-blue-100"
        >
          <div class="text-cyan-400 w-20">
            <Icon name="mdi:clipboard-file-outline" />
          </div>
          Copy the text
        </li>
        <li
          class="ml-2 mt-4 dark:feature-item dark:feature-border dark:hover:bg-slate-600 hover:bg-blue-100 p-2"
        >
          <div class="text-cyan-400 w-20">
            <Icon name="ph:moon-stars-duotone" />
          </div>
          Dark theme
        </li>
        <li
          class="ml-2 mt-6 dark:feature-item dark:feature-border dark:hover:bg-slate-600 hover:bg-blue-100"
        >
          <div class="ml-20 text-cyan-400 w-20">
            <Icon name="ph:lightning-duotone" />
          </div>
          Generate up to 5 drafts in same time
        </li>
      </ul>
    </section>
  </main>
</Layout>

<script>
  document.querySelector(".opacity-0").classList.toggle("opacity-100")
</script>

<style>
  .feature-border {
    --tw-border-opacity: 1;
    border-color: rgb(75 85 99 / var(--tw-border-opacity));
    border-top-color: ;
    border-right-color: ;
    border-bottom-color: ;
    border-left-color: ;
  }

  .feature-item {
    --tw-bg-opacity: 1;
    background-color: rgb(55 65 81 / var(--tw-bg-opacity));
  }
  @media (max-width: 1070px) {
    .container-prev {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .link-app {
      font-size: 1.5rem;
    }

    .description {
      width: 25rem;
      margin-top: 1rem;
      margin-bottom: 1rem;
    }

    .mobile-layout {
      margin: 0;
      justify-items: center;
      flex-direction: column;
      justify-content: center;
    }

    .prev {
      width: 20em;
      padding: 0;
    }

